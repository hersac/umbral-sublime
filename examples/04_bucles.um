f: factorial(n->Int)->Int {
    v: resultado = 1;
    v: i = 1;
    
    wh: (i <= n) {
        resultado = resultado * i;
        i = i + 1;
    }
    
    r: (resultado);
}

tprint('=== Factorial ===');
c: fact5 = factorial(5);
c: fact6 = factorial(6);
tprint("5! = &fact5");
tprint("6! = &fact6");

f: fibonacci(n->Int)->Int {
    i: (n <= 1) {
        r: (n);
    }
    
    v: a = 0;
    v: b = 1;
    v: i = 2;
    
    wh: (i <= n) {
        c: temp = a + b;
        a = b;
        b = temp;
        i = i + 1;
    }
    
    r: (b);
}

tprint('=== Secuencia de Fibonacci ===');
v: fib = 0;
wh: (fib < 8) {
    c: valor = fibonacci(fib);
    tprint("Fibonacci(&fib) = &valor");
