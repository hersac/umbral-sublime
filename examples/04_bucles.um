f: crearArrayCuadrados(tamanio->Int)->[]Int {
    v: arr = {};
    v: i = 1;
    
    wh: (i <= tamanio) {
        c: cuadrado = i * i;
        arr = arr + { cuadrado };
        i = i + 1;
    }
    
    r: (arr);
}

